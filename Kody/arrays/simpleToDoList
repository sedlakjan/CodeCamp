var todos = [];
var question = prompt ("what would you like to do?");
while (question !== "quit"){
if (question === "list"){
    console.log(todos);
}
else if (question === "new"){
    var newTodo = prompt("enter new todo");
    todos.push(newTodo);

}
question = prompt ("what would you like to do?")
}
